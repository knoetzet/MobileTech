<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.g13k0093.mobiletechproj.CapturedActivity"
    android:weightSum="1">


    <ImageView
        android:layout_marginLeft="4mm"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/captureimage"
        android:scaleType="fitCenter"
        android:visibility="visible"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/nextpicture"
        android:layout_alignEnd="@+id/nextpicture" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5mm"
        android:layout_height="140dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Retake"
            android:id="@+id/retake"
            android:onClick="onRetakeClick"
            android:layout_alignTop="@+id/nextpicture"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignStart="@+id/textView4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="When would you like to add extra information. "
            android:id="@+id/textView4"
            android:autoText="false"
            android:editable="false"
            android:layout_marginLeft="4mm"
            android:layout_marginTop="2mm"
            android:textColor="#000000"
            android:layout_alignBaseline="@+id/nextpicture"
            android:layout_alignBottom="@+id/nextpicture"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2mm">


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editlater"
                android:text="Later"
                android:onClick="onLaterClick"
                android:layout_alignTop="@+id/editnow"
                android:layout_alignRight="@+id/captureimage"
                android:layout_alignEnd="@+id/captureimage"
                android:layout_alignLeft="@+id/textView4"
                android:layout_alignStart="@+id/textView4"
                android:layout_marginLeft="9mm"

                android:layout_gravity="right" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Now"
                android:id="@+id/editnow"
                android:onClick="onNowClick"
                android:layout_marginLeft="10mm"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/retake"
                android:layout_alignStart="@+id/retake" />
        </LinearLayout>
    </TableLayout><![CDATA[























    />











]]>
</LinearLayout>
